{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",              // ✅ CommonJS avoids ESM extension issues
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,           // ✅ allows default imports
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
